@model Fiap05.Web.MVC.Models.CartaoVirtual

@{
    ViewBag.Title = "CadastrarCartaoVirtual";
}

<h2>Cadastro de Cartão Virtual</h2>

@Ajudante.Mensagem(TempData["msg"])

@using (Html.BeginForm())
{

    <div class="form-group">
        @Html.LabelFor(c => c.Numero)
        @Html.TextBoxFor(cartao => cartao.Numero, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Utilizado)
        @Html.CheckBoxFor(cartao => cartao.Utilizado)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.CartaoReal)
        @Html.DropDownListFor(cartao => cartao.CartaoRealId, ViewBag.listaCartao as SelectList,
                                 new { @class = "form" })
    </div>

    @Ajudante.Botao("Cadastrar")

}

