@model Fiap04.Web.MVC.Models.Pessoa

@{

       ViewBag.Title = "CadastrarImigrante";
}

<h2>CadastrarImigrante</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(p => p.Nome)
        @Html.TextBoxFor(pessoa => pessoa.Nome, new { @class = "form-control" })
    </div>
    <div>
        @Html.LabelFor(p => p.DataNascimento)
        @Html.TextBoxFor(p => p.DataNascimento, new { @class = "form-control" })
    </div>
    <div>
        @Html.LabelFor(p => p.Dependentes)
        @Html.TextBoxFor(p => p.Dependentes, new { @class = "form-control" })
    </div><br />
    <input type="submit" value="Cadastrar" class="btn btn-primary" />
}

