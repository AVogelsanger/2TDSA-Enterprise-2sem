@model FIap09.Web.MVC.Models.Jogo

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar Jogo</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">@TempData["msg"]</div>
}

@using (Html.BeginForm())
{
    <div class=" form-group">
        @Html.LabelFor(j => j.Nome)
        @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(j => j.DataLancamento)
        @Html.TextBoxFor(j => j.DataLancamento, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(j => j.Plataforma)
        @Html.EnumDropDownListFor(j => j.Plataforma, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(j => j.Disponivel)
        @Html.CheckBoxFor(j => j.Disponivel)
    </div>
    <div class="form-group">
        @Html.LabelFor(j => j.Genero)
        @Html.DropDownListFor(j => j.Genero, ViewBag.Generos as SelectList)
    </div>
    <div>
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>

}

